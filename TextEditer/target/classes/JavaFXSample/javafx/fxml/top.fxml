<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="screen" maxHeight="480.0" maxWidth="640.0" minHeight="480.0" minWidth="640.0" onMouseMoved="#resizeScreen" prefHeight="480.0" prefWidth="640.0" spacing="20.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="JavaFXSample.javafx.TopController">
    <children>
      <HBox alignment="CENTER" prefHeight="18.0" prefWidth="600.0">
         <children>
              <Label alignment="CENTER" prefWidth="640.0" text="TOP画面" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="25.0" prefWidth="600.0" translateY="-50.0">
         <children>
            <ComboBox fx:id="projectNameComboBox" onAction="#selectProject" prefWidth="300.0" promptText="プロジェクトを選択してください。" translateY="35.0" />
         </children>
      </HBox>
      <TreeView fx:id="fileNameTreeView" prefHeight="300.0" prefWidth="600.0" translateY="-35.0" />
      <HBox prefHeight="30.0" prefWidth="600.0" translateY="15.0">
         <children>
            <Button fx:id="createProjectButton" mnemonicParsing="false" onAction="#createFolder">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@Icons/folder-add-line.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="createFileButton" mnemonicParsing="false" onAction="#createFile">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@Icons/file-add-line.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="editFileButton" mnemonicParsing="false" onAction="#fileEdit">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@Icons/draft-line.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="editFileNameButton" mnemonicParsing="false" onAction="#fileNameEdit">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@Icons/file-settings-line.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="projectInfoButton" mnemonicParsing="false" onAction="#switchToEditInfo">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@Icons/infomation-line.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="deleteFileButton" mnemonicParsing="false" onAction="#deleteContent">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@Icons/delete-bin-2-line.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="titleEditButton" mnemonicParsing="false" onAction="#switchToEditTitle">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@Icons/film-line.png" />
                     </image>
                  </ImageView>
               </graphic>
               <HBox.margin>
                  <Insets left="25.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="characterEditButton" mnemonicParsing="false" onAction="#switchToEditCharacter">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@Icons/user-add-line.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
